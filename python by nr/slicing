fruits = ('apple','banana','mango','grapes','orange')
# slice from index 1to3(does not include index 3)
print(fruits[1:3])

# slice from begining up to index3
print(fruits[:3])

# slice from index 2 to end
print(fruits[2:])

# reverse tuple
print(fruits[::-1])


# count Method
numbers = (1,2,3,2,1,2)
count_2 = numbers.count(2)
print(count_2)

# index Method
fruits = ('apple','banana','mango','apple')
index_apple = fruits.index('apple')
print(index_apple)


